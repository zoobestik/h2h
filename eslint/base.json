{
    "parser": "babel-eslint",
    "extends": [
        "airbnb"
    ],
    "rules": {
        "max-len": [
            "error",
            120
        ],

        "indent": [
            "error",
            4
        ],

        "comma-dangle": [
            "error",
            "always-multiline"
        ],

        "no-console": "error",

        "no-unused-vars": [
            "error",
            { "argsIgnorePattern": "^_" }
        ],

        "react/jsx-curly-spacing": [
            "error",
            "always"
        ],

        "react/jsx-indent": [
            "error",
            4
        ],

        "react/jsx-indent-props": [
            "error",
            4
        ],

        "react/jsx-space-before-closing": [
            "error",
            "never"
        ],

        "react/react-in-jsx-scope": 0,

        "import/no-extraneous-dependencies": 1,
        "jsx-a11y/label-has-for": 1
    }
}

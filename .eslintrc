{
    "parser": "babel-eslint",
    "rules": {
        "comma-dangle": [ 2, "always-multiline" ],
        "no-extra-boolean-cast": 0, // jscs
        "no-obj-calls": 1,
        "no-regex-spaces": 0,
        "valid-jsdoc": 2,
        "valid-typeof": 1,

        "accessor-pairs": 2,
        "block-scoped-var": 2,
        "consistent-return": 0,
        "curly": 0, // jscs
        "dot-notation": 0, // jscs
        "guard-for-in": 2,
        "no-caller": 1,
        "no-div-regex": 2,
        "no-else-return": 2,
        "no-fallthrough": 0,
        "no-floating-decimal": 2,
        "no-iterator": 0,
        "no-multi-spaces": 0, // jscs
        "no-multi-str": 0, // jscs
        "no-self-compare": 2,
        "no-throw-literal": 2,
        "no-with": 0, // jscs
        "radix": 2,
        "vars-on-top": 2,
        "yoda": 0, // jscs

        "strict": [ 2, "global" ],

        "no-catch-shadow": 2,
        "no-delete-var": 0,
        "no-shadow": 0,

        "handle-callback-err": 0,
        "no-mixed-requires": 0,
        "no-new-require": 0,
        "no-path-concat": 0,
        "no-process-exit": 0,
        "no-sync": 2,

        "camelcase": 0, // jscs
        "comma-spacing": 0, // jscs
        "eol-last": 0, // jscs
        "key-spacing": 0, // jscs
        "new-cap": 0, // jscs
        "new-parens": 2,
        "no-array-constructor": 2,
        "no-mixed-spaces-and-tabs": 0, // jscs
        "no-nested-ternary": 2,
        "no-new-object": 2,
        "no-space-before-semi": 2, // jscs
        "no-spaced-func": 0, // jscs
        "no-trailing-spaces": 0,
        "no-underscore-dangle": 0,
        "no-unneeded-ternary": 2,
        "quotes": 0, // jscs
        "semi": 0,
        "space-infix-ops": 0, // jscs
        "space-return-throw-case": 0, // jscs
        "space-unary-ops": 0,
        "generator-star-spacing": [ 2, "after" ],
        "no-var": 2,
        "prefer-const": 2,

        // TODO: Bug with acceptTranspilerName?
        // "react/display-name": [ 2, { "acceptTranspilerName": true } ],

        "react/jsx-boolean-value": [ 2, "never" ],
        "react/jsx-quotes": 0, // babel-jscs [ 2, "double", "avoid-escape" ],
        "react/jsx-sort-prop-types": 2,
        "react/jsx-sort-props": 0,
        "react/jsx-uses-react": 2,
        "react/no-did-mount-set-state": 2,
        "react/no-did-update-set-state": 2,
        "react/no-unknown-property": 2,
        "react/prop-types": 2,
        "react/self-closing-comp": 2,
        "react/sort-comp": 0,
        "react/wrap-multilines": 0
    },
    "env": {
        "es6": true,
        "node": true,
        "browser": true
    },
    "ecmaFeatures": {
        "jsx": true,
        "classes": true,
        "regexYFlag": true,
        "regexUFlag": true
    },
    "plugins": [
        "react"
    ]
}
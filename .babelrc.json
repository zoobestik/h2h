{
    "presets": [
        "react",
        [ "env", {
            "targets": {
                "node": "current",
                "browsers": [
                    "last 2 versions",
                    "not ios < 10",
                    "not safari < 10",
                    "not ie <= 11"
                ]
            },
            "loose": true,
            "useBuiltIns": true
        } ]
    ],
    "plugins": [
        "transform-runtime",
        "react-require",
        "transform-object-rest-spread",
        "transform-export-extensions",
        "transform-decorators-legacy",
        "transform-class-properties"
    ]
}
